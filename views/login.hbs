<header>
    <h1>欢迎登录扬子云计算中心编辑平台</h1>
</header>

<div class="margin"></div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
            
            <form role="form" name='loginForm' novalidate ng-submit='loginSubmit()' class="loginForm">
                <div class="form-group">

                    <div class="form-group">
                        <div class="row">
                            <label for="accountname" class="col-xs-4 col-sm-offset-1 col-sm-2 control-label">用户</label>
                            <div class="col-xs-8 col-sm-6">
                                <input type="text" class="form-control" name="accountname" id="accountname" ng-model='user.accountname' placeholder="请输入用户名" required/>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <label for="accountname" class="col-xs-4 col-sm-offset-1 col-sm-2 control-label">密码</label>
                        <div class="col-xs-8 col-sm-6">
                            <input type="password" class="form-control" name="password" id="password" ng-model='user.password' placeholder="请输入您的密码" required/>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div style="color:red" class="col-sm-offset-3 col-sm-8">
                        <b class="notice">[[resultmsg]]</b>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row login">
                        <div class="col-sm-offset-3 col-sm-6 col-xs-8 col-xs-offset-4">
                            <input type="submit" class=" btn btn-warning" id="login" value="登录" />
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>


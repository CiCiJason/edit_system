{{!-- 添加新的用户 --}}
<div class="modal fade addUser" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">新添用户</h4>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="">用户名：</label>
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="accountname" placeholder="请输入用户名" ng-model="user.accountname"/>
                            {{!-- <span ng-if="hide" ng-bind="user.id"></span> --}}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="">用户密码：</label>
                        </div>
                        <div class="col-md-6">
                            <input type="password" class="form-control" name="password" placeholder="请输入新建用户密码(6-20位字母和数字)" ng-model="user.password"/>
                            {{!-- <span ng-if="hide" ng-bind="user.id"></span> --}}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="">确认密码：</label>
                        </div>
                        <div class="col-md-6">
                            <input type="password" class="form-control" name="repassword" placeholder="请再次输入新建用户密码" ng-model="user.repassword"/>
                            {{!-- <span ng-if="hide" ng-bind="user.id"></span> --}}
                        </div>
                    </div>
                </div>

                <div class="from">
                    <div class="col-md-6 col-md-offset-3" style="color:red">
                        [[err_tip]]
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" ng-click="addUser()">保存</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

{{!-- 重置密码 --}}
<div class="modal fade reset-password" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="gridSystemModalLabel">重置密码</h4>
            </div>
            <div class="modal-body">
                <p>重置密码后，密码将被设置成初始密码（123456）！</p>
                <span ng-if="false" ng-bind="resetid"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-default" ng-click="reset_password([[resetid]])">确定</button>
            </div>
        </div>
    </div>
</div>


{{!-- 删除管理员 --}}
<div class="modal fade remove-user" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="gridSystemModalLabel">删除管理员</h4>
            </div>
            <div class="modal-body">
                <p>确认要删除该用户吗？</p>
                <span ng-if="false" ng-bind="deleteid"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-default" ng-click="remove_user(deleteid)">确定</button>
            </div>
        </div>
    </div>
</div>


{{!-- 提示信息 --}}
<div class="modal fade save_tip" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <h2>[[save_tip]]</h2>
            </div>
        </div>
</div>








<div class="container">

    <div class="panel panel-info">

        <div class="panel-heading">
            <span class="panel-title">添加管理员</span>
            {{!--
            <a type="button" class="btn btn-primary more" href="/users/addressDetail">
                <span class="glyphicon glyphicon-plus"></span>
                新增</a> --}}

            <button type="button" class="btn btn-primary more" data-toggle="modal" data-target=".addUser">
                <span class="glyphicon glyphicon-plus"></span>新增</button>
        </div>


        <div class="panel-body">

            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>用户名</th>
                        <th>创建时间</th>
                        <th>操作列</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="x in users">
                        <td>[[x.accountname]]</td>
                        <td>[[x.createTime | filter:date]]</td>
                        <td>
                            {{!--
                            <span class="btn btn-primary">
                                <a href="#!/users/addressDetail?_id=[[x._id]]&type=edit">编辑</a>
                            </span> --}}

                            <button type="button" class="btn btn-primary" ng-click="edit([[x._id]])">编辑</button>

                            {{!--
                            <button type="button" class="btn btn-warning" ng-click="delete([[x._id]])">重置密码</button> --}}

                            {{!-- <button type="button" class="btn btn-warning" data-toggle="modal" data-target=".reset-password">重置密码</button> --}}
                            <button type="button" class="btn btn-warning" ng-click="reset([[x.id]])">重置密码</button>
                            
                            <button type="button" class="btn btn-danger" ng-click="delete([[x.id]])">删除</button>
                            {{!-- <button type="button" class="btn btn-danger" data-toggle="modal" data-target=".remove-user">删除</button> --}}

                        
                        </td>
                    </tr>


                </tbody>
            </table>

        </div>
    </div>



</div>